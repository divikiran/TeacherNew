<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="NPAInspectionWriter.VehicleDetailsHeaderContent">
    <ContentView.Content>
        <StackLayout HorizontalOptions="FillAndExpand">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Text="{Binding Vehicle.StockNumber}" Grid.Row="0" Grid.Column="0" FontAttributes="Bold" />
                <Label Text="{Binding Vehicle.Vin}" Grid.Row="0" Grid.Column="1" HorizontalTextAlignment="End" FontAttributes="Bold" />
            </Grid>
        </StackLayout>
    </ContentView.Content>
</ContentView>